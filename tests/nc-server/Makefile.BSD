# Program name.
PROG	=	nc-server

# Don't install it.
NOINST	= 	1

# Main test code
SRCS	=	main.c
SRCS	+=	simple_server.c

# spiped utility functions
.PATH.c	:	../../lib/util
SRCS	+=	graceful_shutdown.c
IDIRS	+=	-I../../lib/util

# Data structures
.PATH.c	:	../../libcperciva/datastruct
SRCS	+=	elasticarray.c
SRCS	+=	ptrheap.c
SRCS	+=	timerqueue.c
IDIRS	+=	-I../../libcperciva/datastruct

# Event loop
.PATH.c	:	../../libcperciva/events
SRCS	+=	events_immediate.c
SRCS	+=	events_network.c
SRCS	+=	events_network_selectstats.c
SRCS	+=	events_timer.c
SRCS	+=	events.c
IDIRS	+=	-I../../libcperciva/events

# Event-driven networking
.PATH.c	:	../../libcperciva/network
SRCS	+=	network_accept.c
SRCS	+=	network_read.c
IDIRS	+=	-I../../libcperciva/network

# Utility functions
.PATH.c	:	../../libcperciva/util
SRCS	+=	asprintf.c
SRCS	+=	monoclock.c
SRCS	+=	sock.c
SRCS	+=	warnp.c
IDIRS	+=	-I../../libcperciva/util

.include <bsd.prog.mk>
